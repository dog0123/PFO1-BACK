//- views/tarea_form.pug
extends layout

block content
  h1= titulo
  form(method="post", action=action)
    label(for="titulo") Título:
    input(type="text", name="titulo", id="titulo", value=tarea?.titulo)
    br
    label(for="descripcion") Descripción:
    textarea(name="descripcion")= tarea?.descripcion
    br
    label(for="eventoId") Evento (ID):
    input(type="text", name="eventoId", id="eventoId", value=tarea?.eventoId)
    br
    label(for="responsable") Responsable:
    input(type="text", name="responsable", id="responsable", value=tarea?.responsable)
    br
    button(type="submit") Enviar
