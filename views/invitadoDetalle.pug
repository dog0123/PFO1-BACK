extends layout

block content
  h1.mb-4 Detalle del Invitado

  p
    b Evento asociado:
    |  #{invitado.eventoId?.nombre || '—'}

  p
    b Nombre:
    |  #{invitado.nombre || '—'}

  p
    b Email:
    |  #{invitado.email || '—'}

  p
    b Teléfono:
    |  #{invitado.telefono || '—'}

  p
    b Estado:
    |  #{invitado.estado || '—'}

  p
    b Fecha de asistencia:
    |  #{invitado.fechaAsistencia ? invitado.fechaAsistencia.toLocaleDateString() : '—'}

  .mt-4
    a.btn.btn-warning(href=`/invitados/${invitado._id}/editar`) Editar
    form(action=`/invitados/${invitado._id}?_method=DELETE`, method='POST', style='display:inline;')
      button.btn.btn-danger(type='submit') Eliminar
    a.btn.btn-secondary.ms-2(href='/invitados/vista') Volver
