extends layout

block content
  .container
    .row.justify-content-center.align-items-center(min-vh="100")
      .col-sm-8.col-md-6.col-lg-4
        .card.shadow
          .card-body.p-4
            h1.text-center.mb-4 Eventify

            //- Mensaje de error
            if message && message.length
              .alert.alert-danger.text-center= message[0]


            form(method="POST", action="/login")
              .mb-3
                input.form-control(type="text", name="usernameEmail", placeholder="Username o Email", required, autofocus)
              .mb-3
                input.form-control(type="password", name="password", placeholder="Contraseña", required)
              button.btn.btn-primary.btn-lg.btn-block.w-100(type="submit") Iniciar sesión
            .text-center.mt-3
