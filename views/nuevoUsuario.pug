extends layout

block content
  .container
    h1 Registrar nuevo usuario

    form(method="POST", action="/signup")
      input.form-control.mb-2(type="text", name="firstName", placeholder="Nombre", required)
      input.form-control.mb-2(type="text", name="lastName", placeholder="Apellido", required)
      input.form-control.mb-2(type="text", name="username", placeholder="Username", required)
      input.form-control.mb-2(type="email", name="email", placeholder="Email", required)
      input.form-control.mb-2(type="password", name="password", placeholder="Password", required)
      button.btn.btn-primary.mt-3(type="submit") Crear usuario

    a.btn.btn-secondary.mt-3(href='/home') Volver
